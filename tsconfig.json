{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules"],
  "compileOnSave": true
}
